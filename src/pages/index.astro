<Layout title='Welcome to Astro.'>
  <script>
    window.onscroll = function () {
      scrollFunction();
    };

    function scrollFunction() {
      if (
        document.body.scrollTop > 20 ||
        document.documentElement.scrollTop > 20
      ) {
        document.getElementById("navbar").classList.remove("bg-transparent");
        document.getElementById("navbar").classList.remove("text-gray-300");
        document.getElementById("navbar").classList.add("text-gray-900");
        document.getElementById("navbar").classList.add("bg-white");
        document.getElementById("navbar").classList.add("shadow");
        document.getElementById("navbar").classList.add("absolute");
        document.getElementById("navbar").classList.add("top-0");
      } else {
        document.getElementById("navbar").classList.remove("bg-white");
        document.getElementById("navbar").classList.remove("shadow");
        document.getElementById("navbar").classList.remove("text-gray-900");
        document.getElementById("navbar").classList.add("text-gray-300");
        document.getElementById("navbar").classList.add("bg-transparent");
        document.getElementById("navbar").classList.remove("absolute");
        document.getElementById("navbar").classList.remove("top-0");
      }
    }
  </script>
